= form_for(@status) do |f|
  - if @status.errors.any?
    #error_explanation
      %h2
        = pluralize(@status.errors.count, "error")
        prohibited this status from being saved:
      %ul
        - @status.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .form-group
    = f.label :content
    %br/
    = f.text_area :content
  = f.submit 'Save Status', :class => 'btn'
